@using KubaBlog.Controllers
@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




<table class="table table-bordered">
    <tr>
        <th> #   </th>
        <th> Adı   </th>
        <th> Sil   </th>
        <th> Güncelle   </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Id </td>
            <td> @item.Name </td>
            <td> <a href="/Employee/DeleteEmployee/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td> <a href="/Employee/EditEmployee/@item.Id" class="btn btn-outline-info ">Düzenle</a></td>

        </tr>
    }


</table>

