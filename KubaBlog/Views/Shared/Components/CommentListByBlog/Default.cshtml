@model IEnumerable<KubaBlog.EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <h2>Blog yazısına ait henüz bir yorum yapılmamıştır.</h2>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/writer/assets/images/faces/face5.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>  @item.CommentContent  </p>
                </div>
            </div>
        }
    }
</div>

